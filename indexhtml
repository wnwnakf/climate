            <hr style="border:none;border-top:1px solid rgba(20,60,40,0.04);margin:12px 0">

            <form id="contactForm" onsubmit="return false;">
              <label class="muted" for="contactName">이름</label>
              <input id="contactName" name="contactName" type="text" required>

              <label class="muted" for="contactEmail" style="margin-top:10px">이메일</label>
              <input id="contactEmail" name="contactEmail" type="email" required>

              <label class="muted" for="contactMessage" style="margin-top:10px">문의 내용</label>
              <textarea id="contactMessage" name="contactMessage" required></textarea>

              <div style="margin-top:10px;display:flex;gap:10px">
                <button class="btn primary" id="sendContact" type="submit">보내기</button>
                <button class="btn ghost" id="clearContact" type="button">지우기</button>
              </div>

              <div id="contactMsg" style="margin-top:10px;display:none;font-weight:700;color:var(--accent-2)"></div>
            </form>
          </div>
        </div>

        <aside>
          <div style="padding:14px;border-radius:12px;background:linear-gradient(180deg,#fff,#fbfffd);border:1px solid rgba(20,60,40,0.03)">
            <h4 style="margin:0 0 8px">연락처</h4>
            <p class="muted" style="margin:0 0 6px">이메일: <a href="mailto:hello@greenhour.org">hello@greenhour.org</a></p>
            <p class="muted" style="margin:0 0 6px">SNS: @greenhour (예시)</p>
          </div>
        </aside>
      </div>
    </section>

    <!-- Footer -->
    <footer class="site-footer" role="contentinfo">
      <div class="container" style="display:flex;justify-content:space-between;align-items:center;gap:12px;flex-wrap:wrap">
        <div>
          <div style="font-weight:700">그린 아워</div>
          <div class="muted" style="margin-top:6px">퍼즐 조각 모양의 생태계 아이콘 · 환경 미디어 콘텐츠 제작</div>
        </div>
        <div style="text-align:right">
          <div class="copyright">이 홈페이지의 지적 소유권은 재단에 있다.</div>
          <div class="muted" style="margin-top:6px">© <span id="year"></span> 그린 아워</div>
        </div>
      </div>
    </footer>
  </main>

  <script>
    // 안전성 체크: 모든 DOM 엘리먼트가 존재하는지 기본 검증 후 기능 바인딩
    (function(){
      // 기본 데이터(예시 게시물)
      const posts = [
        {title:"웹툰 연재: 작은 숲의 목격자 - 1화", excerpt:"도시 근처 작은 숲에서 일어난 변화와 발견을 다룬 첫 화.", date:"2025-10-01"},
        {title:"영상 공개: 한 시간의 녹색 습관", excerpt:"하루 1시간, 녹색 습관으로 바뀐 사람들의 이야기.", date:"2025-09-20"},
        {title:"뉴스레터 Vol.12: 플라스틱 대신 선택할 수 있는 것들", excerpt:"플라스틱 대체물질과 일상에서의 선택 방법을 정리했습니다.", date:"2025-08-15"}
      ];

      // DOM 요소 안전 참조
      const postsList = document.getElementById('postsList');
      const loadMoreBtn = document.getElementById('loadMore');
      const joinCampaignBtn = document.getElementById('joinCampaignBtn');
      const subscribeBtn = document.getElementById('subscribeBtn');
      const campaignForm = document.getElementById('campaignForm');
      const campaignMsg = document.getElementById('campaignMsg');
      const clearCampaign = document.getElementById('clearCampaign');
      const submitCampaign = document.getElementById('submitCampaign');
      const donateBtn = document.getElementById('donateBtn');
      const contactBtn = document.getElementById('contactBtn');
      const contactForm = document.getElementById('contactForm');
      const contactMsg = document.getElementById('contactMsg');
      const clearContact = document.getElementById('clearContact');

      // 연도 자동 표시
      const yearSpan = document.getElementById('year');
      if(yearSpan) yearSpan.textContent = new Date().getFullYear();

      // 게시물 렌더 함수
      function renderPosts(list){
        if(!postsList) return;
        list.forEach(p => {
          const el = document.createElement('article');
          el.className = 'post';
          el.innerHTML = `
            <div class="thumb" aria-hidden="true"></div>
            <div>
              <h4>${escapeHtml(p.title)}</h4>
              <p class="muted">${escapeHtml(p.excerpt)}</p>
              <div class="muted" style="margin-top:8px;font-size:12px">${escapeHtml(p.date)}</div>
            </div>
          `;
          postsList.appendChild(el);
        });
      }

      // 초기 게시물
      renderPosts(posts.slice(0,2));

      // 더보기 버튼
      if(loadMoreBtn){
        loadMoreBtn.addEventListener('click', function(){
          renderPosts(posts.slice(2));
          loadMoreBtn.style.display = 'none';
        });
      }

      // 캠페인 폼 처리 (시뮬레이션)
      if(submitCampaign && campaignForm){
        submitCampaign.addEventListener('click', function(ev){
          ev.preventDefault();
          const name = (document.getElementById('name')||{}).value || '';
          const email = (document.getElementById('email')||{}).value || '';
          const interest = (document.getElementById('interest')||{}).value || '';
          if(!name || !email){ showCampaignMsg('이름과 이메일을 입력해 주세요.', true); return; }
          showCampaignMsg('참여 신청이 접수되었습니다. 감사합니다! (시뮬레이션)', false);
          // 폼 리셋(선택)
          campaignForm.reset();
        });
      }

      function showCampaignMsg(text, isError){
        if(!campaignMsg) return;
        campaignMsg.style.display = 'block';
        campaignMsg.style.color = isError ? '#d9534f' : 'var(--accent-2)';
        campaignMsg.textContent = text;
        setTimeout(()=>{ if(campaignMsg) campaignMsg.style.display = 'none'; }, 4200);
      }

      if(clearCampaign && campaignForm){
        clearCampaign.addEventListener('click', ()=> campaignForm.reset());
      }

      // 후원 & 문의
      if(donateBtn){
        donateBtn.addEventListener('click', ()=> {
          alert('후원 페이지로 이동합니다. (예시)'); // 실제 페이지로 링크할 수 있음
        });
      }
      if(contactBtn){
        contactBtn.addEventListener('click', ()=> {
          // 스크롤해서 문의 폼으로 포커스
          const el = document.getElementById('contactName');
          if(el){ el.focus(); window.scrollTo({ top: el.getBoundingClientRect().top + window.scrollY - 80, behavior:'smooth' }); }
        });
      }
      if(contactForm && document.getElementById('sendContact')){
        document.getElementById('sendContact').addEventListener('click', function(ev){
          ev.preventDefault();
          const name = (document.getElementById('contactName')||{}).value || '';
          const email = (document.getElementById('contactEmail')||{}).value || '';
          const message = (document.getElementById('contactMessage')||{}).value || '';
          if(!name || !email || !message){ showContactMsg('모든 항목을 작성해 주세요.', true); return; }
          showContactMsg('문의가 전송되었습니다. 곧 담당자가 연락드립니다. (시뮬레이션)', false);
          contactForm.reset();
        });
      }
      if(clearContact){
        clearContact.addEventListener('click', ()=> contactForm.reset());
      }

      // 뉴스레터 구독 모달(간단)
      if(subscribeBtn){
        subscribeBtn.addEventListener('click', ()=> {
          const email = prompt('뉴스레터를 받으실 이메일을 입력해 주세요:');
          if(email && /\S+@\S+\.\S+/.test(email)){
            alert('구독이 등록되었습니다. 감사합니다! (시뮬레이션)');
          } else if(email !== null){
            alert('유효한 이메일을 입력해 주세요.');
          }
        });
      }

      // 캠페인 바로가기 버튼
      if(joinCampaignBtn){
        joinCampaignBtn.addEventListener('click', ()=> {
          const camp = document.getElementById('campaign');
          if(camp) camp.scrollIntoView({behavior:'smooth', block:'start'});
        });
      }

      // Escape/Enter 키를 이용한 접근성 개선 (간단)
      document.addEventListener('keydown', (e) => {
        if(e.key === 'Escape'){
          // 닫을 모달이 있으면 닫는 동작 등 (현재 모달 없음)
        }
      });

      // 안전: escape HTML 텍스트로 삽입 (XSS 예방)
      function escapeHtml(str){
        if(!str) return '';
        return String(str)
          .replace(/&/g, '&amp;')
          .replace(/</g, '&lt;')
          .replace(/>/g, '&gt;')
          .replace(/"/g, '&quot;')
          .replace(/'/g, '&#39;');
      }

      // 마지막으로 간단한 런타임 체크(콘솔에 메시지)
      try {
        console.info('그린 아워 홈페이지 스크립트 로드 완료');
      } catch(err){
        console.error('스크립트 실행 중 오류:', err);
      }
    })();
  </script>
</body>
</html>
